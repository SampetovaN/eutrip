{
  "name": "eutrip",
  "version": "1.0.0",
  "private": true,
  "description": "Путешествие по Европе",
  "devDependencies": {
    "autoprefixer": "9.5.x",
    "browser-sync": "2.26.x",
    "gulp": "4.0.x",
    "gulp-sass": "^4.1.0",
    "gulp-plumber": "1.2.x",
    "gulp-sourcemaps": "2.6.x",
    "gulp-postcss": "8.0.x",
    "@htmlacademy/editorconfig-cli": "1.x",
    "stylelint": "^10.1.0",
    "stylelint-config-htmlacademy": "0.1.x",
    "stylelint-config-standard": "^20.0.0"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "fix": "eclint fix source/sass/blocks/*.scss",
    "build": "gulp css",
    "start": "gulp start"
  },
  "browserslist": [
    "last 2 versions",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.less"
  ],
  "engines": {
    "node": "8.16"
  }
}
